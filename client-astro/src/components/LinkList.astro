---
import { ChevronRight } from "lucide-react";
import { Separator } from "./ui/separator";
import { cn } from "@/lib/utils";

interface Link {
  name: string;
  link: string;
  class?: string;
}

export interface Props {
  links: Link[];
}

const { links } = Astro.props;
---

<ul class="grid border rounded-md px-4 py-2 bg-background">
  {
    links.map((link, idx) => (
      <li>
        <a
          class={cn({ "opacity-50": !link.name }, link.class)}
          href={link.link}
        >
          <div class="text-sm flex w-full justify-between">
            {link.name || "Unnamed List"}
            <ChevronRight />
          </div>
        </a>
        {idx < links.length - 1 && <Separator className="my-2" />}
      </li>
    ))
  }
</ul>
