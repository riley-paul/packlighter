---
import { Button } from "./ui/button";
import { AccountDropdown } from "./AccountDropdown";
import { Feather } from "lucide-react";

const { user } = Astro.locals;
const imageUrl = user ? Astro.locals.pb.files.getUrl(user, user.profile) : "";
---

<header class="bg-card text-foreground h-14 border-b shadow">
  <div class="container flex justify-between items-center h-full">
    <a href="/" class="flex items-center w-[250px] border-r h-full">
      <Feather className="mr-3 w-6 text-teal-500" />
      <h1 class="font-medium text-lg">PackLighter</h1>
    </a>
    <AccountDropdown user={user} imageUrl={imageUrl} client:load />
  </div>
</header>
